#!/bin/bash

# Run script for SCADASystem

# Set working directory
cd "@CMAKE_SOURCE_DIR@"

# Set environment variables
if [ -d "@CMAKE_BINARY_DIR@/lib" ]; then
    export LD_LIBRARY_PATH="@CMAKE_BINARY_DIR@/lib:$LD_LIBRARY_PATH"
fi

if [ -d "@CMAKE_BINARY_DIR@/qml" ]; then
    export QML2_IMPORT_PATH="@CMAKE_BINARY_DIR@/qml:$QML2_IMPORT_PATH"
fi

# Run the application
if [ -f "@CMAKE_BINARY_DIR@/bin/SCADASystem" ]; then
    echo "Starting SCADASystem..."
    "@CMAKE_BINARY_DIR@/bin/SCADASystem"
else
    echo "Error: SCADASystem executable not found at @CMAKE_BINARY_DIR@/bin/SCADASystem"
    echo "Please build the project first using 'cmake --build @CMAKE_BINARY_DIR@'"
    exit 1
fi
